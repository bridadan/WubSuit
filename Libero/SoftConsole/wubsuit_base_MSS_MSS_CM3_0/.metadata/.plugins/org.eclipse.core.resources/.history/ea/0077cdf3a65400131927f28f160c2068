#ifndef MENU_H_
#define MENU_H_

#define MENU_COUNT 5
#define MAX_SUBMENUS 10
#define MAX_NAME 20

struct Menu {
	char* name;
	void (*command)();
	uint8_t submenusCount;
	struct Menu* submenus[MAX_SUBMENUS];
};

struct MenuState {
	uint8_t currentMenu;
	uint8_t selectedMenu;
	struct Menu menus[MENU_COUNT];
};


void Menu_init();
void Menu_changeMenu(uint8_t menuId);

// Menu Options
void Menu_LPiezoOptionCmd();

#endif /* MENU_H_ */
