#include <inttypes.h>
#include <stdio.h>
#include "suit.h"

int main()
{
	Suit_init(&suitState);

	while (1) {
		printf("Sensor update #%u\n\r", updates_count++);
		printf("Accel: (%u, %u, %u)\n\r", suitState.accelX, suitState.accelY, suitState.accelZ);
		printf("Flex: %u\n\r", suitState.flexValue);
		printf("Hand Height: %u\n\r", suitState.handHeight);
	}

	return 0;
}
