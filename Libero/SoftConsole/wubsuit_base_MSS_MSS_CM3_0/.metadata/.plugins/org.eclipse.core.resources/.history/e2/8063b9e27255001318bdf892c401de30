#ifndef MENU_H_
#define MENU_H_

// Menu
void Menu_setMenu(Menu* menu);
void Menu_LPiezoOptionCmd();

#define MENU_COUNT 5
#define MAX_SUBMENUS 10
#define MAX_NAME 20

struct Menu {
	char* name;
	void (*command)();
	uint8_t submenusCount;
	struct Menu* submenus[MAX_SUBMENUS];
};

struct MenuState {
	Menu* currentMenu;
	uint8_t selectedMenu;
	struct Menu menus[MENU_COUNT];
} menuState;

#endif /* MENU_H_ */
