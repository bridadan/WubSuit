#ifndef __LCD_H_
#define __LCD_H_

#include <stdio.h>
#include "menu.h"

uint8_t LCD_selectorPosition = 0;

void LCD_showMenu(Menu* menu) {
	printf("\n\r--- %s (%u) ---\n\r", menu->name, menu->submenusCount);

	volatile uint8_t i;
	for (i = 0; i < menu->submenusCount; i++) {
		char* str = (menu->submenus[i])->name;
		printf("--- %s\n\r", str);
	}
}

void LCD_moveSelector(uint8_t position) {
	printf("LCD selector pos: (%u, %u)\n\r", LCD_selectorPosition, position);
	LCD_selectorPosition = position;
}

#endif /* __LCD_H_ */
