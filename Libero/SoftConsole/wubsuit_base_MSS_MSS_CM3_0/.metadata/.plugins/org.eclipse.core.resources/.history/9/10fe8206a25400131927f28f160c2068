#ifndef MENU_H_
#define MENU_H_

#include "constants.h"
#include "suit.h"

#define MENU_COUNT 5
#define MAX_SUBMENUS 10
#define MAX_NAME 20

typedef struct _Menu {
	char name[MAX_NAME];
	void (*command)();
	uint8_t submenusCount;
	struct _Menu* submenus[MAX_SUBMENUS];
} Menu;

typedef struct _MenuState {
	uint8_t currentMenu;
	uint8_t selectedMenu;
	Menu menus[MENU_COUNT];
} MenuState;


void Menu_init();
void Menu_changeMenu(uint8_t menuId);

// Menu Options
void Menu_LPiezoOptionCmd();

#endif /* MENU_H_ */
