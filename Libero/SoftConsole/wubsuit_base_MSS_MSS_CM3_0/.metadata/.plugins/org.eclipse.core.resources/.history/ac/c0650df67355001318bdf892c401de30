#ifndef __LCD_H_
#define __LCD_H_

#include <stdio.h>
#include "menu.h"

void LCD_showMenu(Menu* menu) {
	printf("\n\r--- %s (%u) ---\n\r", menu->name, menu->submenusCount);

	volatile uint8_t i;
	for (i = 0; i < menu->submenusCount; i++) {
		printf("--- > %s", menu->submenus[i]->name);
	}
}

#endif /* __LCD_H_ */
